	 height: str-slice($name,12,15)*$multipler; 
	 }
	@include respond-to('mobile'){
	  height: str-slice($name,12,15)*$multiplier ;
	  }
	@include respond-to('small'){ 
	   height: str-slice($name,12,15)*$multiplier ;
	  }
	@include respond-to('medium'){
	 height: str-slice($name,12,15)*$multiplier ;
